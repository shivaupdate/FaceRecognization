@model IList<SelectListItem>
@{
    Layout = null;
}
<form method="post" enctype="multipart/form-data">
    <p align="right" style="display:none;visibility:hidden;">
        @Html.DropDownList("personGroupId", Model)

    </p>
    <input type="file" id="ImageToAnalyze" name="ImageToAnalyze" accept="image/*" capture="capture"/>
    <div class="row martop20 ">
        <div class="col-xs-12">

            <button type="button" id="Up" class="btn checkinbtn btn-danger">Take Photo</button>
        </div>
    </div>
    <div class="row martop20 ">
        <div class="col-xs-12">
            <img src="#" id="imgshow" width="330" height="250" style="display:none;visibility:hidden;" align="left">
        </div>
    </div>
    <div class="row martop20 ">
        <div class="col-xs-12">
            <button type="submit" class="btn checkinbtn btn-danger">Check-In</button>
        </div>
    </div>
</form>
    <script>
        window.addEventListener("DOMContentLoaded", function () {
            $("#Up").click(function () {
                $("#ImageToAnalyze").click();
            });

            $("#ImageToAnalyze").change(function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#imgshow').attr('src', e.target.result);
                        $('#imgshow').attr('style', "display:block;visibility:visible;");
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
        }, false);
</script>
<style>
    input {
        position: absolute;
        top: -100px;
    }
</style>
